<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints,MissingDefaultResource">

    <ImageView
        android:id="@+id/tablayoutItemIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tablayoutItemText"
        app:layout_constraintRight_toRightOf="@+id/tablayoutItemText"/>

    <TextView
        android:id="@+id/tablayoutItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@+id/tablayoutItemIcon"
        android:textSize="12sp"
        tools:text="工作台"/>
</androidx.constraintlayout.widget.ConstraintLayout>